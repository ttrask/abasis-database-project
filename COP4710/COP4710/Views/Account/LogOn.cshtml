@model COP4710.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
    Layout = "";
}

<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Site.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{

    <div id="login">
    @{
        Html.ActionLink("Create User", "Create", "User", null);
    }
    <a href="@Url.Action("List", "User", null )">Click this</a>
    <div class="Header">
    Log On</div>
        <div class="Field">
            <div class="Label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="Input">
                @Html.TextBoxFor(m => m.UserName)
                <!--@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "ValidationMessage" })!-->
            </div>
        </div>
        <br>
        <div class="Field">
            <div class="Label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="Input">
            @Html.PasswordFor(m => m.Password, new { @id = "txtPassword" })
            <div id="tip1_up" style="display:none;"><pre class="tip">{ deltaDirection: 'left' }</pre></div>
            <!--@Html.ValidationMessageFor(m => m.Password, "", new { @class = "ValidationMessage" })!-->
            </div>
        </div>
        <hr class='Submit' />    
        <p>
            @Html.ActionLink("Logon", "Create", "User", null, new{ @class="Submit"})
            
        </p>
    </div>
    
}


<script src="@Url.Content("~/Scripts/jQuery.bubbletip-1.0.6.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(window).bind('load', function() {
        $('#txtPassword').bubbletip($('#tip1_up'));
    });
</script>
