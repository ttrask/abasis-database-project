@using COP4710.Extensions;
@using COP4710.Controllers;
@{
    ViewBag.Title = "Import Data";
    ViewBag.PageTitle = "Import Data";
}
@using (Html.BeginForm("Import", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="Main" id="Main">
        <div class="Sidebar" id="sidebar">
            @Html.ActionLink("Run Report", "Export", new { }, new { @Class = "Reports Link" })
            @Html.ActionLink("Import Data", "Import", new { }, new { @Class = "Reports Link" })
        </div>
        <div class="Content" id="content">
            <div class="Section">
                <div class="Header">
                    Import Data From Excel
                </div>
                <div>
                    <label for="fileUpload">
                        Upload Excel File
                    </label>
                    <input type="file" id="file" name="file" style="width: 200px;" />
                </div>
                <input type="submit" class="Submit" />
            </div>
        </div>
    </div>
}
