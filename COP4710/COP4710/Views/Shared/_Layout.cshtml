<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" type="text/css" rel="Stylesheet" />
    <link href="@Url.Content("~/Content/themes/black-tie/jquery-ui-1.8.16.css")" type="text/css" rel="Stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.scrollTo-min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.localscroll-1.2.7-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Site.js")" type="text/javascript"></script>
    <script type="text/javascript">
    var _imgDir = "@Url.Content("~/Content/Images/")";
    </script>
</head>
<body>
    <div id="main">
        <div class="Header">
            <div class="PageTitle">
                @ViewBag.PageTitle
            </div>
            <div style="float: right; display: inline; margin-top:8px">
                @{Html.RenderAction("AccountBar", "Account", new { });}
            </div>
        </div>
        <hr id="pageSeperator" />
        <div id="">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
